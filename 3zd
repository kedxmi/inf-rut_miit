# Введем данные из массива в переменную a
a = [18, 28, 66, 32, 84, 1.3, 6, -7, 3, 101, 2.6, 5, 1, 0, 26, 4.8, -42, 41, -36, 22, 12, 0.7, 73, 52, 3.2]
sum = 0  # Ввели переменную для подсчета суммы отрицаельных чисел массива a
k = 0  # Ввели переменную для подсчета количества отрицательных чисел массива a
b = []  # Ввели переменнуюдля массива из найденных отрицательных чисел массива a
for i in a:  # Делаем цикл for для перебора чисел в массиве
    if i < 0:  # Условие проверки числа на отрицательность
        sum += i  # Если условие соблюдено, то сумма складывается
        k += 1  # Если условие соблюдено, то количество считается
        b.append(i)  # Если условие соблюдено, то массив заключает в себя отрицательные числа
print('Сумма отрицательных чисел массива:', sum)  # Вывод суммы
print('Количество отрицательных чисел массива', k)  # Вывод количества
print('Массив B', b)  # Вывод массива B 
